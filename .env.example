# Variáveis de Ambiente - Sistema de Gestão de Sugestões

# ====== BANCO DE DADOS ======
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=2154
DB_NAME=projeto_integrador
DB_PORT=3306

# ====== FIREBASE ======
FIREBASE_PROJECT_ID=projeto-integrador-sugestoes
FIREBASE_PRIVATE_KEY_ID=your_private_key_id
FIREBASE_PRIVATE_KEY=your_private_key
FIREBASE_CLIENT_EMAIL=your_service_account@projeto-integrador-sugestoes.iam.gserviceaccount.com
FIREBASE_CLIENT_ID=your_client_id
FIREBASE_AUTH_URI=https://accounts.google.com/o/oauth2/auth
FIREBASE_TOKEN_URI=https://oauth2.googleapis.com/token

# ====== GOOGLE SHEETS ======
GOOGLE_SHEETS_CREDENTIALS_FILE=config/google-credentials.json
GOOGLE_SHEETS_NAME=forms
GOOGLE_SHEETS_SCOPES=https://spreadsheets.google.com/feeds,https://www.googleapis.com/auth/drive

# ====== APLICAÇÃO ======
APP_NAME=Sistema de Gestão de Sugestões
APP_VERSION=2.0.0
APP_DEBUG=True
APP_HOST=0.0.0.0
APP_PORT=8501

# ====== SEGURANÇA ======
SECRET_KEY=your_secret_key_here_change_in_production
JWT_SECRET_KEY=your_jwt_secret_key_here
SESSION_TIMEOUT=3600

# ====== LOGS ======
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# ====== EMAIL (OPCIONAL) ======
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# ====== SYNC ======
SYNC_INTERVAL=30  # segundos
AUTO_SYNC_ENABLED=True

# ====== SETORES DISPONÍVEIS ======
AVAILABLE_SECTORS=Acadêmico,Infraestrutura,Atendimento,Financeiro,Recursos Humanos,TI
